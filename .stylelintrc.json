{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "-moz-osx-font-smoothing",
          "font-smooth"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["content"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}

